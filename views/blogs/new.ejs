   <div class="container w-75 mt-5 p-1">
    <h3 style="font-family: 'Times New Roman', Times, serif;" class="mt-3 mb-3 m-auto">Publish Your Blog</h3>
    <form action="/blogs" method="POST" class="needs-validation" novalidate>
      <div class="mb-3 ">
        <label for="exampleInputtext" class="form-label">Full Name</label>
        <input type="text" name="writer" class="form-control" id="exampleInputText" aria-describedby="textHelp" placeholder="Enter Your Name" required>
        <div class="invalid-feedback">
          Please Enter Your Name.
        </div>
        <div class="valid-feedback">
          Nice Name!
        </div>
      </div>
        <div class="mb-3 ">
          <label for="exampleInputtext" class="form-label">Title</label>
          <input type="text" name ="title"class="form-control" id="exampleInputText" aria-describedby="textHelp" placeholder="Enter Title of the Blog" required>
          <div class="invalid-feedback">
            Please Write Title Of The Blog.
          </div>
          <div class="valid-feedback">
            Looks Good !
          </div>
        </div>
        <div class="mb-3 ">
            <label for="exampleInputBody" class="form-label">Image URL</label>
            <br>
            <input type="text" name="img" class="form-control" id="exampleInputText" aria-describedby="textHelp" placeholder="Enter Image URL" required>
            <div class="invalid-feedback">
              Give A Valid URL.
            </div>
            <div class="valid-feedback">
               Good!
            </div>
          </div>
        <div class="mb-3 ">
          <label for="exampleInputBody" class="form-label">Content</label>
          <br>
          <!-- content of the blog -->
 
          <textarea name="bodycontent" class="form-control" id="editor" cols="124" rows="10" required>
            
          </textarea>

          <div class="invalid-feedback">
            Provide Some Useful Content.
          </div>
          
        </div>
        
        <button type="submit" class="btn btn-success mb-4">Post your Blog</button>
      </form>

   </div>
    
