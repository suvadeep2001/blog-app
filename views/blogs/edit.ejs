<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container w-75 mt-5 p-3">
    <h3>Edit Blog</h3>
    <br>
    
    <form action="/blogs/<%= foundBlog._id %>?_method=PATCH" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required value="<%= foundBlog.title %>">
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Image URL</label>
            <input type="text" class="form-control" id="img" name="img" required value="<%= foundBlog.img %>">
        </div>
        <div class="mb-3">
            <label for="bodycontent" class="form-label">Content</label>
            <textarea name="bodycontent" class="form-control" id="bodycontent" cols="124" rows="5" required><%= foundBlog.bodycontent %></textarea>
        </div>
        <button type="submit" class="btn btn-success mb-4">UPDATE</button>
    </form>
</div>

<%- include('../partials/footer') %>
